<html>
  head
    block styles
    title Home
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    link(rel="stylesheet" type="text/css" href="/css/PageStyle.css")

  <body>
    div.top
      <ul>
        <li><a class="active" href="/home" style="color: black;">Home</a></li>
        li: a(href="/sellCar/carDetails") Sell a car
        li: a(href="/drive") Drive
        <li><a href="/myCars">My Cars</a><li>
        li: a(href=`/myProfile/${user.name}`) #{user.name}
        li(style="float:right;"): a(href='/logout') Logout 
      </ul>

    div.main
      <div class="row row-cols-1 row-cols-md-4" style="margin-top: 20px; margin-bottom: 20px; margin-right: 5px; margin-left: 5px;">
        for car in cars
          -var ownerId = car.owner._id.toString()
          -var userId = user._id.toString()
          -if (ownerId != userId)
            <div class="col mb-4">
              <div class="card h-100">
                img.card-img-top(src=`/${car.image}` alt="Card image cap")
                <div class="card-body">
                  h5.card-title= car.brand + ' ' + car.model
                  a(href=`/car/${car._id}` class="btn btn-primary stretched-link") View 
                </div>
              </div>
            </div>
      </div>
    
    div.footer
      p &copy; 2020 Vehicle Assistant
  </body>
</html>